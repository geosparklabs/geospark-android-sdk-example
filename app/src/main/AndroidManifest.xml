<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.storyboard.geosparkexam">

    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--GOOGLE API-->

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR-GOOGLE-APP-ID" />

        <activity
            android:name="com.storyboard.geosparkexam.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.storyboard.geosparkexam.MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.storyboard.geosparkexam.locationlog.LocationLogActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_latlnglogs"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />

        <activity
            android:name="com.storyboard.geosparkexam.tracked.TrackedActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_map"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />

        <activity
            android:name="com.storyboard.geosparkexam.sdksettings.SDKSettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_map"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />

        <activity
            android:name="com.storyboard.geosparkexam.userlog.UserLogActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_logs"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />


        <activity
            android:name="com.storyboard.geosparkexam.trip.TripActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />

        <activity
            android:name="com.storyboard.geosparkexam.geofence.CreateGeofenceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />

        <activity
            android:name="com.storyboard.geosparkexam.geofence.GeofenceListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />

        <!--FIREBASE-->
        <service android:name="com.storyboard.geosparkexam.firebase.MyFireBaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name="com.storyboard.geosparkexam.firebase.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name="com.storyboard.geosparkexam.LocationReceiver">
            <intent-filter>
                <action android:name="com.geospark.android.RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>